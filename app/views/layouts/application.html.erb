<!DOCTYPE html>
<html>
<head>
  <title>BuyList</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <div id="logo">
    <%= link_to("Buy List", root_path) %>
  </div>
  <div id="locale">
    <%= link_to(image_tag("english-icon.png"), url_for(:locale => 'en')) %>
    <%= link_to(image_tag("portuguese-icon.png"), url_for(:locale => 'pt-BR')) %>
  </div>
</header>

<% unless current_page? root_path #doesn't show user info in the homepage %>
<div id="user-nav">
  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to(I18n.t('logout'), signout_path, id: "sign_out") %>
  <% else %>
    <%= link_to(I18n.t('signin.facebook'), "/auth/facebook", id: "sign_in") %>
  <% end %>
</div>
<% end %>

<%= yield %>

<footer>
  <p>Â© 2013</p>
</footer>
</body>
</html>
